---
import "bootstrap/dist/css/bootstrap.min.css";
import Header from './Header.astro';
import Footer from './Footer.astro';
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <Header title={title}/>
  </head>
    <h1>{title}</h1>
    <article>
      <slot />
    </article>
    <Footer />
  </body>
</html>